<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.camunda.tngp</groupId>
  <artifactId>tngp-root</artifactId>
  <version>1.0.0-alpha3</version>
  <packaging>pom</packaging>

  <parent>
    <groupId>org.camunda</groupId>
    <artifactId>camunda-release-parent</artifactId>
    <version>2.5</version>
    <!-- do not remove empty tag - http://jira.codehaus.org/browse/MNG-4687 -->
    <relativePath />
  </parent>

  <properties>
    <nexus.snapshot.repository>https://app.camunda.com/nexus/content/repositories/camunda-tngp-snapshots/</nexus.snapshot.repository>
    <nexus.release.repository>https://app.camunda.com/nexus/content/repositories/camunda-tngp/</nexus.release.repository>
    <!-- disable javadoc linter to not fail on incomplete javadoc -->
    <additionalparam>-Xdoclint:none</additionalparam>
  </properties>

  <modules>
    <module>parent</module>
    <module>broker-core</module>
    <module>qa</module>
    <module>client-java</module>
    <module>protocol-test-util</module>
    <module>protocol</module>
    <module>samples</module>
    <module>dist</module>
  </modules>

  <profiles>
    <profile>
      <id>sonatype-oss-release</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <configuration>
              <!-- skip gpg signing as the release is not pushed to maven central -->
              <skip>true</skip>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <scm>
    <url>https://github.com/camunda-tngp/camunda-tngp</url>
    <connection>scm:git:git@github.com:camunda-tngp/camunda-tngp.git</connection>
    <developerConnection>scm:git:git@github.com:camunda-tngp/camunda-tngp.git</developerConnection>
    <tag>1.0.0-alpha3</tag>
  </scm>

</project>
