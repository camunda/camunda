{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "noEmit": true,
    "paths": {
      "@fixtures": ["fixtures.ts"],
      "@setup": ["./test-setup.ts"],
      "@pages/*": ["pages/*"]
    }
  }
}
