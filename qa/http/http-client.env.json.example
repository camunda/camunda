{
  "_comment": "Example configuration for all HTTP tests in /qa/http folder. Copy to http-client.private.env.json and configure your values.",
  "_security_warning": "NEVER commit http-client.private.env.json to version control!",

  "local": {
    "ZEEBE_REST_ADDRESS": "http://localhost:8080",
    "AUTH_TYPE": "Basic",
    "BASIC_AUTH_TOKEN": "ZGVtbzpkZW1v",
    "BASIC_AUTH_TOKEN_A": "dGVzdEE6dGVzdGE=",
    "_note": "BASIC_AUTH_TOKEN is base64 encoded 'username:password'. Example: echo -n 'demo:demo' | base64"
  },

  "saas": {
    "ZEEBE_REST_ADDRESS": "https://your-cluster-id.region.zeebe.camunda.io",
    "AUTH_TYPE": "Bearer",
    "CAMUNDA_OAUTH_URL": "https://login.cloud.camunda.io/oauth/token",
    "CLIENT_ID": "your-client-id",
    "CLIENT_SECRET": "your-client-secret",
    "AUDIENCE": "zeebe.camunda.io",
    "_note": "Get credentials from Camunda Console > Cluster > API tab. Run OAuth2 token request first."
  },

  "production": {
    "ZEEBE_REST_ADDRESS": "https://your-production-cluster.example.com",
    "AUTH_TYPE": "Bearer",
    "CAMUNDA_OAUTH_URL": "https://your-identity-provider.example.com/oauth/token",
    "CLIENT_ID": "your-production-client-id",
    "CLIENT_SECRET": "your-production-client-secret",
    "AUDIENCE": "your-production-audience"
  }
}

