<component>

  <fileSets>
    <fileSet>
      <directory>${project.basedir}/../backend/target/lib</directory>
      <outputDirectory>lib</outputDirectory>
    </fileSet>

    <fileSet>
      <directory>${project.basedir}/../backend/src/main/resources/localization/</directory>
      <outputDirectory>config/localization</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/../backend/src/main/resources/logo/</directory>
      <outputDirectory>config/logo</outputDirectory>
    </fileSet>

    <fileSet>
      <!--create empty plugin directory-->
      <directory>src/</directory>
      <outputDirectory>plugin</outputDirectory>
      <excludes>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>src/upgrade</directory>
      <outputDirectory>upgrade</outputDirectory>
      <!-- these files will be included in files section -->
      <excludes>
        <exclude>upgrade.bat</exclude>
        <exclude>upgrade.sh</exclude>
      </excludes>
    </fileSet>

    <fileSet>
      <directory>src/reimport/</directory>
      <outputDirectory>reimport/</outputDirectory>
      <!-- these files will be included in files section -->
      <excludes>
        <exclude>reimport.bat</exclude>
        <exclude>reimport.sh</exclude>
      </excludes>
    </fileSet>
  </fileSets>

  <files>
    <!-- root directory -->
    <file>
      <source>${project.basedir}/../backend/target/optimize-backend-${project.version}.jar</source>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/README.txt</source>
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/License.txt</source>
      <filtered>true</filtered>
      <lineEnding>crlf</lineEnding>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/LicenseBook_Optimize.txt</source>
      <filtered>true</filtered>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>src/optimize-startup.sh</source>
      <filtered>true</filtered>
      <outputDirectory></outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/optimize-startup.bat</source>
      <filtered>true</filtered>
      <outputDirectory></outputDirectory>
    </file>

    <!-- upgrade directory -->
    <file>
      <source>
        ${project.basedir}/../upgrade/target/upgrade-optimize-from-${project.previousVersion}-to-${project.version}.jar
      </source>
      <outputDirectory>upgrade</outputDirectory>
    </file>
    <file>
      <source>src/upgrade/upgrade.sh</source>
      <filtered>true</filtered>
      <outputDirectory>upgrade</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/upgrade/upgrade.bat</source>
      <filtered>true</filtered>
      <outputDirectory>upgrade</outputDirectory>
      <fileMode>0755</fileMode>
    </file>

    <!-- reimport directory -->
    <file>
      <source>
        ${project.basedir}/../util/optimize-reimport-preparation/target/optimize-reimport-preparation-${project.version}.jar
      </source>
      <outputDirectory>reimport</outputDirectory>
    </file>
    <file>
      <source>src/reimport/reimport.sh</source>
      <filtered>true</filtered>
      <outputDirectory>reimport</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/reimport/reimport.bat</source>
      <filtered>true</filtered>
      <outputDirectory>reimport</outputDirectory>
      <fileMode>0755</fileMode>
    </file>

    <!-- config directory -->
    <file>
      <source>src/config/environment-config.yaml</source>
      <filtered>true</filtered>
      <outputDirectory>config</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
  </files>
</component>