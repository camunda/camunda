{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/setupTests.tsx",
    "src/**/__mocks__/**/*",
    "src/modules/mocks/**/*",
    "src/**/mocks.ts",
    "src/**/mocks.tsx",
    "src/**/*.setup.ts",
    "src/modules/testUtils.tsx",
    "src/modules/testUtils/**/*",
    "./vitest.browser.setup.ts",
    "src/test-extend.ts"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": "src"
  }
}
