{
  "index_patterns": [
    "zeebe-record_message_*"
  ],
  "composed_of": ["zeebe-record"],
  "priority": 20,
  "version": 1,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.queries.cache.enabled": false
    },
    "aliases": {
      "zeebe-record-message": {}
    },
    "mappings": {
      "properties": {
        "value": {
          "dynamic": "strict",
          "properties": {
            "name": {
              "type": "keyword"
            },
            "correlationKey": {
              "type": "text"
            },
            "messageId": {
              "type": "keyword"
            },
            "timeToLive": {
              "type": "long"
            },
            "variables": {
              "enabled": false
            },
            "deadline": {
              "type": "long"
            }
          }
        }
      }
    }
  }
}
