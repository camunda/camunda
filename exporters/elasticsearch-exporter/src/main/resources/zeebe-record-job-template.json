{
  "index_patterns": [
    "zeebe-record_job_*"
  ],
  "composed_of": ["zeebe-record"],
  "priority": 20,
  "version": 1,
  "template": {
    "settings": {
      "number_of_shards": 3,
      "number_of_replicas": 0,
      "index.queries.cache.enabled": false
    },
    "aliases": {
      "zeebe-record-job": {}
    },
    "mappings": {
      "properties": {
        "value": {
          "dynamic": "strict",
          "properties": {
            "type": {
              "type": "keyword"
            },
            "elementId": {
              "type": "text"
            },
            "elementInstanceKey": {
              "type": "long"
            },
            "bpmnProcessId": {
              "type": "keyword"
            },
            "processDefinitionVersion": {
              "type": "integer"
            },
            "processInstanceKey": {
              "type": "long"
            },
            "processDefinitionKey": {
              "type": "long"
            },
            "customHeaders": {
              "enabled": false
            },
            "worker": {
              "type": "keyword"
            },
            "retries": {
              "type": "long"
            },
            "retryBackoff": {
              "type": "long"
            },
            "recurringTime": {
              "type": "long"
            },
            "deadline": {
              "type": "long"
            },
            "variables": {
              "enabled": false
            },
            "errorMessage": {
              "type": "text"
            },
            "errorCode": {
              "type": "text"
            }
          }
        }
      }
    }
  }
}
