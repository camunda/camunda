{
  "index_patterns": [
    "zeebe-record_timer_*"
  ],
  "composed_of": ["zeebe-record"],
  "priority": 20,
  "version": 1,
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0,
      "index.queries.cache.enabled": false
    },
    "aliases": {
      "zeebe-record-timer": {}
    },
    "mappings": {
      "properties": {
        "value": {
          "dynamic": "strict",
          "properties": {
            "elementInstanceKey": {
              "type": "long"
            },
            "dueDate": {
              "type": "long"
            },
            "targetElementId": {
              "type": "keyword"
            },
            "repetitions": {
              "type": "integer"
            },
            "processDefinitionKey": {
              "type": "long"
            },
            "processInstanceKey": {
              "type": "long"
            }
          }
        }
      }
    }
  }
}
