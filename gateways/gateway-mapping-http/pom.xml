    <dependency>
      <groupId>io.camunda</groupId>
      <artifactId>camunda-gateway-model</artifactId>
    </dependency>

    <dependency>
      <groupId>io.camunda</groupId>
      <artifactId>camunda-authentication</artifactId>
      <!-- we only need the entities which need security-core and search-domain -->
